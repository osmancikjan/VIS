@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1>Odjezdové časy autobusů</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p>
        @{if (Session["email"] == null)
        {

            <a href="/Users/Login" class="btn btn-primary btn-lg">Přihlásit <i class="glyphicon-chevron-right"></i></a>
    }
    else
    {
        <h4>Vítejte @Session["Name"] @Session["LastName"]</h4>
        <a href="/Users/Logout" class="btn btn-danger btn-lg">Odhlásit <i class="glyphicon-chevron-right"></i></a>
    }
        }
    </p>
