@model IEnumerable<Mapper.DataMapper.Times>

@{
    ViewBag.Title = "Shedule";
}

<h2>Shedule</h2>

<table class="table">
    <tr>
        <th>
            Bus
        </th>
        <th>
            Směr
        </th>
        <th>
            Odjezd
        </th>
        <th>
            Zpoždění
        </th>
        <th>
            Poslední známá poloha
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <b> @Html.DisplayFor(modelItem => item.bus) </b>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.last)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.leaving)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.delay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.last_known)
        </td>
        <td>
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Uložit ve formátu XML", "Download", "Times")
</div>